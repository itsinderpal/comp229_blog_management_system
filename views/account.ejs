<%- include ./partials/header.ejs %>
    <%- include ./partials/nav.ejs %>

        <div class="container">
            <div class="row flex flex-col justify-center items-center text-center py-6">
                <div class="offset-md-3 col-md-6">
                    <h1 class="text-2xl font-bold p-4">
                        <%= title %>
                    </h1>

                    <form class="form" method="POST" class="flex flex-col justify-center text-center">
                        <div class="form-group space-x-2 flex justify-between items-center">
                            <input type="hidden" name="id" value="<%= user._id %>">
                            <label for="nameField">Name</label>
                            <input type="text" class="form-control p-1 bg-gray-100 outline-none" id="nameField"
                                placeholder="Enter your name" name="name" value="<%= user.name %>" required>
                        </div>
                        <br />
                        <div class="form-group space-x-2 flex justify-between items-center">
                            <label for="emailField">Email Address</label>
                            <input type="text" class="form-control p-1 bg-gray-100 outline-none" id="emailField"
                                placeholder="Enter your email address" name="email" value="<%= user.email %>" required>
                        </div>
                        <br />
                        <div class="flex justify-center space-x-4">
                            <button class="btn btn-primary p-2 bg-blue-100" type="submit">
                                <i class="fas fa-edit"></i>
                                Edit
                            </button>
                            <a href="/" class="btn btn-warning  p-2 bg-blue-100">
                                <i class="fas fa-undo"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        </div>
        <%- include ./partials/footer.ejs %>