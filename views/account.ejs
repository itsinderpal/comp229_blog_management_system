<%- include ./partials/header.ejs %>
    <%- include ./partials/nav.ejs %>

        <div>
            <div class="flex flex-col justify-center items-center text-center py-6">
                <div>
                    <h1 class="text-3xl font-bold p-4 pb-8">
                        <%= title %>
                    </h1>

                    <form method="POST" class="flex flex-col justify-center text-center">
                        <div class="space-x-2 flex justify-between items-center">
                            <!-- <input type="hidden" name="id" value="<%= user._id %>"> -->
                            <label for="nameField">Name</label>
                            <input type="text" class="p-2 rounded-lg bg-gray-100 outline-none" id="nameField"
                                placeholder="Enter your name" name="name" value="<%= user.name %>" required>
                        </div>
                        <div class="space-x-2 flex justify-between items-center pt-6">
                            <label for="emailField">Email Address</label>
                            <input type="text" class="p-2 rounded-lg bg-gray-100 outline-none" id="emailField"
                                placeholder="Enter your email address" name="email" value="<%= user.email %>" required>
                        </div>
                        <div class="flex justify-center space-x-4 py-8">
                            <button
                                class="text-xl border-2 border-blue-100 p-2 bg-blue-100 rounded-lg  hover:text-white"
                                type="submit">
                                Edit
                            </button>
                            <a href="/"
                                class="text-xl border-2 border-blue-100 p-2 bg-blue-100 rounded-lg  hover:text-white">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        </div>
        <%- include ./partials/footer.ejs %>